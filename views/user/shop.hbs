                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="product__price">Rs{{this.price}}</div>
                                {{!-- <div><a onclick="addToCart('{{this._id}}')" class="btn btn-success">Add To Cart</a>
