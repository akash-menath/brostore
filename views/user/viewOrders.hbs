<!-- Breadcrumb End -->
<!-- Shoping Cart -->
<div class="col-lg-12">
	<form class="bg0 p-t-75 p-b-85">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 col-xl-12  m-b-50">
					<div class="m-l-25 m-r--38 m-lr-0-xl">
						<div class="wrap-table-shopping-cart">
							<table class="table-shopping-cart">
								<tr class="table_head">
									<th class="" style="width: 60px;">Date</th>
									<th class="" style="width:200px">Product</th>
									<th class="" style="width:200px">Address</th>
									<th class="" style="width: 50px;">Amount</th>
									<th class="" style="width: 50px;">Payment</th>
									<th class="" style="width: 50px;">Status</th>
									
									

								</tr>
								
								{{#each order}}

								<tr class="table_row">
									<td class="" style="width: 80px;">{{this.delivaryAddress.date}}</td>
									<td class="" style="width: 200px;"><img src="/product-images/{{result._id}}.jpg"
											alt="IMG" style="width: 65px;px ;"> <br>
										{{result.name}} <br>
										{{result.description}} <br>
										Brand : {{result.category}} <br>
										Price : {{result.price}} <br>
										Quantity : {{products.qty}}
										{{#if productTotal}}
										Discount : {{delivaryAddress.discount}}
										{{/if}}
									</td>
									
									<td class="" style="width: 200px;">{{delivaryAddress.name}} <br>
										{{this.delivaryAddress.email}} <br>
										{{this.delivaryAddress.phone}} <br>
										{{this.delivaryAddress.address}} <br>
										{{this.delivaryAddress.city}} <br>
										{{this.delivaryAddress.state}}<br>
										{{this.delivaryAddress.pincode}}
									</td>


									
										{{#if productTotal}}
										<td class="" style="width: 50px;"> {{this.productTotal}}</td>
										{{else}}
										<td class="" style="width: 50px;">{{delivaryAddress.totalAmount}}</td>
										{{/if}}
										
										
									{{!-- <td class="" style="width: 50px;">OR {{delivaryAddress.totalAmount}} <br>PR {{this.productTotal}}</td> --}}
									<td class="" style="width: 50px;">{{paymentMethod}}</td>
									<td class="" style="width: 50px;">{{products.Status}}</td>
									<td class="" style="width: 80px;"><a
											href="/view-order-products/{{_id}}/{{products.item}}"
											class="btn btn-outline-primary ">Details</a>
									</td>
								</tr>
								{{/each}}

							</table>


						</div>


					</div>
				</div>



			</div>
		</div>
	</form>
</div>
<style>
	table,
	th,
	td {
		border: 1px solid black;
		border-collapse: collapse;
	}

	th,
	td {
		padding-top: 10px;
		padding-bottom: 20px;
		padding-left: 30px;
		padding-right: 40px;
	}
</style>