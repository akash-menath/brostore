<section>
  <div class=" container row">
    <div class="ml-5 col-md-6">
      <h2 class="text-center mt-5">Add Products</h2>
      <form action="/admin/add-product" method="post" enctype="multipart/form-data" class="text-danger" id="addProduct">

        <label class="text-dark" for="">Name</label>
        <input type="text" name="name" class="form-control" oninput="this.value= this.value.toLocaleUpperCase()" required><br>

        <label class="text-dark" for="">Salect Categories</label><br>
        <select  name="category" class="form-select" id="">
          {{#each catogory}}
          <option >{{this.name}}</option>
          {{/each}}
        </select>

        <label for="" class="text-dark">Description</label>
        <input type="text" name="description" class="form-control" required><br>

        <label for="" class="text-dark">Price</label>
        <input type="Number" name="price" class="form-control" required><br>

         <label for="" class="text-dark">Stock</label>
        <input type="Number" name="stock" class="form-control" required><br>

        <label for="" class="text-dark">Image</label>
        <input type="file" name="Image" class="form-control" required><br>



        <button type="submit" class="btn btn-success mt-4">Submit</button>

      </form>
    </div>
  </div>
</section>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script type="text/javascript"
  src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.js"></script>
<script>
  $("#addProduct").validate();
</script>