<section>
  <div class=" container row">
    <div class="ml-5 col-md-6">
      <h2 class="text-center mt-5">Edit Coupan</h2>
      <form action="/admin/edit-coupon/{{coupon._id}}" method="post" id="edit" >
         <label class="text-dark" for="">Coupon Code</label>
        <input type="text" name="name" class="form-control" placeholder="{{coupon.name}}" value="{{coupon.name}}" oninput="this.value= this.value.toLocaleUpperCase()" required><br>

      

        <label for="" class="text-dark">Offer</label>
        <input type="text" name="offer" class="form-control"  placeholder="{{coupon.offer}}" value="{{coupon.offer}}" required><br>

        <label for="" class="text-dark">Validity</label>
        <input type="date"placeholder="{{coupon.validity}}" value="{{coupon.validity}}" name="validity" class="form-control" required><br>

        <button type="submit" class="btn btn-success mt-4">Submit</button>

      </form>
    </div>
  </div>
</section>
