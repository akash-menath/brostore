                                    <option value="women">Women</option>
                                    <option value="kids">Kids</option>
                                </select> --}}
        <label for="">Description</label>
        <input type="text" name="description" class="form-control" value="{{product.description}}" required>

        <label for="">Price</label>
        <input type="Number" name="price" class="form-control" value="{{product.price}}" required>

         <label for="" class="text-dark">Stock</label>
        <input type="Number" name="stock" class="form-control" value="{{product.stock}}" required><br>

        <label for="">Image</label>
        <img src="/product-images/{{product._id}}.jpg" style="width: 50px; height: 50px;" id="imgView">
        <input type="file" name="Image" class="form-control" value="/product-images/{{product._id}}.jpg"  onchange="viewImage(event)" required>

  

        <button type="submit" class="btn btn-success mt-4">Submit</button>

      </form>
    </div>
  </div>
</section>
<script>

    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>


